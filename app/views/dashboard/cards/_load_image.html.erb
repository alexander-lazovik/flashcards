<div class="modal fade" id="load_image">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= t(:load_image_label) %></h4>
      </div>

      <div class="modal-body">
        <%= form_tag(images_path, { method: :get, remote: true, class: "form-inline" }) do %>
          <div class="form-group">
            <%= text_field_tag :tags, params[:tags],
              class: "form-control", id: "image_tags", placeholder: t(:image_tags_placeholder) %>
          </div>
          <%= submit_tag t(:search_label), name: nil, class: "btn btn-default",
            id: "search_button", data: { disable_with: t(:searching_label)} %>
        <% end %>

        <div class="list_images" id="images"></div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t(:close_label) %></button>
      </div>
    </div>
  </div>
</div>
