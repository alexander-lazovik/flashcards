source 'https://rubygems.org'

ruby '2.6.1'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '5.2.2'
# Use postgresql as the database for Active Record
gem 'pg'
# Use Puma as the app server
gem 'puma', '~> 3.11'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.2'
# A gem to automate using jQuery with Rails
gem 'jquery-rails'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.5'
# rdoc generator html with javascript search index
gem 'sdoc', '~> 0.4.0',          group: :doc
# Rake is a Make-like program implemented in Ruby
gem 'rake'
# Rails forms made easy
gem 'simple_form'
# Nokogiri is an HTML, XML, SAX, and Reader parser.
gem 'nokogiri'
# Extends Rails seeds to split out complex seeds into multiple files
gem 'seedbank'
# Magical Authentication for Rails
gem 'sorcery'
# Simple, but flexible HTTP client library,
gem 'faraday'
# Simple Rails app configuration
gem 'figaro'
# This gem provides a simple and extremely flexible way to upload files from Ruby applications.
gem 'carrierwave'
# A ruby wrapper for ImageMagick or GraphicsMagick command line
gem 'mini_magick'
# Module for the 'fog' gem to support Amazon Web Services
gem 'fog-aws'
# Makes running your Rails app easier
gem 'rails_12factor', group: :production
# Calculates the Levenshtein distance between two byte strings.
gem 'levenshtein'
# gem that provides a clear syntax for writing and deploying cron jobs
gem 'whenever', require: false
# Fishes out the Accept-Language header into an array
gem 'http_accept_language'
# Routing filters wraps around the complex beast that the Rails routing system is
gem 'routing-filter'
# Exception tracking and logging from Ruby to Rollbar
gem 'rollbar'
# New Relic RPM Ruby Agent
gem 'newrelic_rpm'
# Reduces boot times through caching; required in config/boot.rb
#gem 'bootsnap', '>= 1.1.0', require: false
gem 'bootstrap'

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'factory_bot_rails'
  gem 'pry-rails'
  gem 'pry-byebug'
end

group :development do
  # Access an interactive console on exception pages or by calling 'console' anywhere in the code.
  gem 'web-console', '>= 3.3.0'
  gem 'listen', '>= 3.0.5', '< 3.2'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
end


